@model Common.Views.ProductDetailsView

@{
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
    ViewBag.Title = Model.Name;
}

<h4>@Model.Name</h4>

<div class="row">
    @Html.HiddenFor(model => model.Id, htmlAttributes: new { id = "productId" })
    <div class="col-md-4" id="productImageContainer">
        @if (Model.ImagePath == null)
        {
            <img src="..\..\Images\No_Image_Available.png" alt="No image available" />
        }
        else
        {
            <img src="@Model.ImagePath" alt="@Model.Name Image" />
        }
    </div>
    <div class="col-md-8">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                @Html.DisplayName("Quantity")
            </dt>
            <dd>
                <input type="number" id="qtyRequired" min="1" max="@Model.QtyAvailable" value="1" />
            </dd>
            <dd>
                <input type="button" id="btnAddToCart" value="Add to Cart" />
            </dd>
        </dl>
    </div>
</div>