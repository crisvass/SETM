@model IEnumerable<Common.Views.OrderView>

@{
    ViewBag.Title = "Order Management";
}

<h2>Orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VatRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderTotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VatRate) %
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTotal)
            </td>
            <td>
                @if (item.Status.ToLower() != "cancelled")
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderId });
                    @Html.DisplayName(" | ");
                }
                @Html.ActionLink("Details", "Details", new { id = item.OrderId })
                @if (item.Status.ToLower() != "cancelled")
                {
                    @Html.DisplayName("| ");
                    @Html.ActionLink("Cancel", "Delete", new { id = item.OrderId });
                }
            </td>
        </tr>
    }
</table>
