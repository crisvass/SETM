@model Common.Views.MenusView

@{
    ViewBag.Title = "Menu Management";
}

<h2>Delete Role</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Action)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Action)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Url)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Url)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position)
        </dd>
        @if (Model.HasSubmenus)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Submenus)
            </dt>
            <dd>
                <table>
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Action)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Url)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Position)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Common.Views.MenusView sub in Model.Submenus)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => sub.Action)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => sub.Url)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => sub.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => sub.Position)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
        }
        @if (Model.MenuRoles.Count() > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.MenuRoles)
            </dt>
            <dd>
                @Html.ListBoxFor(model => model.MenuRoles, Model.MenuRolesList)
            </dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>