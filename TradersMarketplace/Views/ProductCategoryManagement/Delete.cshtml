@model Common.Views.CategoryView

@{
    ViewBag.Title = "Product Category Management";
}

<h2>Delete Product Category</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        @if (Model.SubCategories != null && Model.SubCategories.Count() > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SubCategories)
            </dt>
            <dd>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Common.Views.CategoryView cv in Model.SubCategories)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => cv.CategoryId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => cv.CategoryName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
