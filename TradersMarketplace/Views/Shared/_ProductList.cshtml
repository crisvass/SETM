@model IEnumerable<Common.Views.ProductListView>
@if (Model != null)
{
    <div id="products">
        <h2 id="productListPageTitle">
            <span id="title">
                @ViewBag.ProductPageTitle
            </span>
        </h2>
        @if (Model.Count() == 0)
        {
            <p>
                There are no products in this category.
            </p>
        }
        else
        {
            @Html.Partial("_ProductListInner")
        }
    </div>
}