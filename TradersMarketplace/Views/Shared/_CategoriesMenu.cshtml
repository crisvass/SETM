<h4>Categories</h4>

<ul>
    @foreach (Common.Views.CategoryView cv in ViewBag.Categories)
    {
        <li>
            @Html.ActionLink(cv.CategoryName, "ListCategory", new { categoryId = cv.CategoryId })
            @if (cv.SubCategories != null)
            {
                <ul>
                    @foreach (Common.Views.CategoryView sub in cv.SubCategories)
                    {
                        <li>
                            @Html.ActionLink(sub.CategoryName, "ListCategory", new { categoryId = sub.CategoryId })
                        </li>
                    }
                </ul>
            }
        </li>
    }
</ul>